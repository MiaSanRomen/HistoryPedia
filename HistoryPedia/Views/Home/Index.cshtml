@model IEnumerable<HistoryPedia.Models.Article>
@{
    ViewBag.Title = "All articles";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>
                    Welcome to HistoryPedia!
                </h1>
            </div>
            <blockquote class="blockquote text-right">
                <p class="mb-0">
                    History is a teacher of life.
                </p>
                <footer class="blockquote-footer">
                    Marcus Tullius Cicero 
                </footer>
            </blockquote>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3>
                Popular articles
            </h3>
            <div class="row">
            </div>
            <div class="row">
                <div class="col-md-3">
                    <a class="btn btn-outline-info btn-block" asp-action="Edit" asp-controller="Home">Add an article</a>
                </div>
                <div class="col-md-5">
                </div>
                <div class="col-md-4">
                    <form method="get">
                        <div class="form-inline form-group">
                            <input name="name" class="form-control" />
                            <input type="submit" value="Search" class="btn btn-outline-success" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="row">
            </div>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card">
                            <img class="card-img-top" alt="Bootstrap Thumbnail First" src="@item.Image.Path">
                            <div class="card-block">
                                <h5 class="card-title">
                                    @item.Name
                                </h5>
                                <p class="card-text">
                                    @item.ShirtInfo
                                </p>
                                <p>
                                    <a class="btn btn-primary" asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">Learn more</a>
                                </p>
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
</div>


