@model HistoryPedia.Models.BlockInfo
@{
    ViewBag.Title = "Editing new information block";
}
<form asp-action="EditBlock" asp-controller="home" asp-route-id="@Model.BlockInfoId">
    <div class="form-group">
        <label asp-for="BlockName" class="control-label">Title</label>
        <input type="text" asp-for="BlockName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Text" class="control-label">Text</label>
        <input type="text" asp-for="Text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ArticleId" class="control-label" hidden="true">Article Id</label>
        <input type="text" asp-for="ArticleId" class="form-control" hidden="true" />
    </div>
    <div class="form-group">
        <label asp-for="ArticleName" class="control-label" hidden="true">Article Name</label>
        <input type="text" asp-for="ArticleName" class="form-control" hidden="true" />
    </div>
    <div class="form-group">
        <label asp-for="BlockInfoId" class="control-label" hidden="true">Id</label>
        <input type="text" asp-for="BlockInfoId" class="form-control" hidden="true" />
    </div>
    <div class="form-group">
        <label asp-for="PrevName" class="control-label" hidden="true">PrevName</label>
        <input type="text" asp-for="PrevName" class="form-control" hidden="true" />
    </div>
    <div class="form-group">
        <label asp-for="BlockImageName" class="control-label">Image</label>
        @if (Model.BlockImageName != null)
        {
            <a class="btn btn-outline-warning btn-block" asp-action="EditPicture" asp-controller="Home" asp-route-pictureName="@Model.BlockImageName" asp-route-type="0">Edit an image</a>
        }
        else
        {
            <a class="btn btn-outline-info btn-block" asp-action="EditPicture" asp-controller="Home" asp-route-pictureName="@Model.BlockImageName" asp-route-type="0">Add an image</a>
        }
        <input type="text" asp-for="BlockImageName" hidden="true" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Confirm" class="btn btn-outline-success" />
    </div>
</form>